{
  "manifest_version": 3,
  "name": "Twitter Sentiment Analyzer",
  "version": "1.0.0",
  "description": "Analyzes tweets for emotional sentiment and topic classification",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
